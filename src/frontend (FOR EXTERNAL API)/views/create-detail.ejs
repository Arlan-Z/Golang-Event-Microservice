<%- include('partials/header') %>

<h1>Add Round/Detail for Event: <%= eventId %></h1> <%# Pass eventId from route %>

<form action="/events/<%= eventId %>/details?_method=POST" method="POST">
    <div class="form-group">
        <label for="roundNumber">Round Number:</label>
        <input type="number" id="roundNumber" name="roundNumber" min="1" required>
    </div>
    <div class="form-group">
        <label for="homeTeamScore">Home Team Score:</label>
        <input type="number" id="homeTeamScore" name="homeTeamScore" min="0" value="0" required>
    </div>
     <div class="form-group">
        <label for="awayTeamScore">Away Team Score:</label>
        <input type="number" id="awayTeamScore" name="awayTeamScore" min="0" value="0" required>
    </div>
    <button type="submit">Add Round</button>
</form>

<a href="/events/<%= eventId %>">Back to Event Details</a>

<%- include('partials/footer') %>